<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', book: @book, user: @user %>
		</div>

		<div class="col-xs-9">
			<h2>Users</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>image</th>
						<th>name</th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
				<% @users.each do |user| %>
					<tr>
						<td>
							<%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no-image.jpg", size: "60Ã—60" %>
						</td>
						<td>
							<%= user.name %>
						</td>
						<td>
							<%= link_to "Show", user_path(user.id) %>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>