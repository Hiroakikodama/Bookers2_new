<%= form_for(@book, url: books_path) do |f| %>
	<% if @book.errors.any? %>
		<div class="error_expanation">
			<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
<% end %>