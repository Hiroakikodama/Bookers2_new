<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'books/list', book: @book, user: @user %>
		</div>

		<div class="col-xs-9">
			<h3>Book detail</h3>
			<table class="table table-striped">
				<tbody>
					<tr>
						<td>
							<%= link_to user_path(@user.id) do %>
								<%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no-image.jpg", size: "60x60" %>
								<%= @user.name %>
							<% end %>
						</td>
						<td>
							<%= @books.title %>
						</td>
						<td>
							<%= @books.body %>
						</td>
						<td>
							<% if @books.user_id == current_user.id %>
								<%= link_to "Edit", edit_book_path(@books.id), class: "btn-sm btn-success edit-book_10349" %>
								<%= link_to "Destroy", book_path(@books.id), method: :delete, "data-confirm" => "本当に削除しますか?", class: "btn-sm btn-denger destroy_book_10349" %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>